<div class="page-title">
    <div class="title_left">
        <h3>Usuário</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Pesquisar - Filtros</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                @using (Html.BeginForm("Index", "Users", FormMethod.Post, new { @id = "search", @class = "form-horizontal col-md-12 col-xs-12" }))
                {
                    <div class="form-group col-md-6 col-xs-12">
                        @Html.Label("Nome")
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6 col-xs-12">
                        @Html.Label("Login")
                        @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-6 col-xs-12">
                        @Html.Label("CNPJ")
                        @Html.TextBoxFor(model => model.Cnpj, new { @class = "form-control cnpj" })
                    </div>
                    <div class="form-group col-md-6 col-xs-12">
                        @Html.Label("Representação")
                        @Html.TextBoxFor(model => model.Representation, new { @class = "form-control" })
                    </div>
                }
            </div>
            <div class="row">
                <div class="form-group col-md-12 col-xs-12 text-right">
                    <button type="button" onclick="GetData(1);" class="btn btn-primary">Pesquisar</button>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                        <table id="search" class="table table-striped table-bordered" style="width:100%" data-page-length='2'>
                            <thead>
                                <tr>
                                    <th class="column text-center" data-column="name" data-css="text-center">Nome</th>
                                    <th class="column text-center" data-column="profile" data-css="text-center">Perfil</th>
                                    <th class="column text-center" data-column="cnpj" data-css="text-center">Cnpj</th>
                                    <th class="column text-center" data-column="representation" data-css="text-center">Representação</th>
                                    <th class="column text-center" data-column="login" data-css="text-center">Login</th>
                                    <th class="column text-center" data-column="" data-css="text-center">Ação</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <div id="pagination"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.mask.min.js"></script>
    <script src="~/js/jquery.inputmask.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            //StartDatatables();
            GetData();
            MaskCnpj();
        });

        function GetData(pagina) {
            Search(true, '@Url.Action("Edit", "Users")', true, '@Url.Action("Delete", "Users")', pagina);
        }
    </script>
}